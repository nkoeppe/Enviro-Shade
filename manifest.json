{
  "manifest_version": 2,
  "name": "Env Color Banner",
  "version": "1.1.0",
  "description": "Prominent page overlay (chip + diagonal watermark) and optional badge indicating LOCAL/QA/PROD. Fully configurable URL patterns and colors.",
  "permissions": ["tabs", "theme", "webNavigation", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "browser_action": {
    "default_title": "Env Color Banner"
  },
  "icons": {
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "102.0",
      "id": "env-color-banner@fancyguysdev.de"
      }
  }
}
